{
  "name": "lifi-event-indexer",
  "version": "1.0.0",
  "main": "dist/app.js",
  "author": "germi <germanbonin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node build/app.js",
    "dev": "nodemon src/app.ts",
    "build": "rm -rf build/ && tsc",
    "test": "vitest",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "types:check": "tsc --noEmit",
    "prettier:fix": "prettier --write ./src/.",
    "blocks:update-last-indexed": "npx ts-node src/scripts/updateLastIndexedBlock.ts",
    "blocks:listen-new-blocks": "npx ts-node src/scripts/listenForNewBlocks.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@typegoose/typegoose": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "i": "^0.3.7",
    "mongoose": "^8.0.3"
  }
}
